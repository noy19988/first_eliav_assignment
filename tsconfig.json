{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": ".", 
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "tests/**/*"], 
  "exclude": ["node_modules"]
}
